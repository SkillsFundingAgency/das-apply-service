@{ 
    ViewData["Title"] = "Privacy";
    Layout = "_Layout";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Privacy</h1>
            <p class="govuk-body">
                When you register on the Apprenticeship assessment service, the personal information you give us will be used:
            </p>
            <ul class="govuk-list govuk-list--bullet">
              <li>to apply for a standard to assess</li>
              <li>to manage your pipeline of assessments</li>
              <li>to record assessments and issue certificates</li>
              <li>for administration and research purposes</li>
            </ul>
            <p class="govuk-body">The Department for Education (DfE) runs this service. We handle the information you give us according to the <a class="govuk-link" href="https://www.gov.uk/government/publications/esfa-privacy-notice">DfE privacy notice</a>.</p>
        </div>
    </div>
</main>