@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.AddEditManagementHierarchyViewModel

<div class="govuk-form-group" sfa-validation-for="FirstName" sfa-validationerror-class="govuk-form-group--error">
    <label asp-for="FirstName" class="govuk-label">First name</label>
    <span class="govuk-error-message" asp-validation-for="FirstName"></span>
    <input type="text" class="govuk-input" asp-for="FirstName" sfa-validation-for="FirstName" sfa-validationerror-class="govuk-input--error" />
</div>

<div class="govuk-form-group" sfa-validation-for="LastName" sfa-validationerror-class="govuk-form-group--error">
    <label asp-for="LastName" class="govuk-label">Last name</label>
    <span class="govuk-error-message" asp-validation-for="LastName"></span>
    <input type="text" class="govuk-input" asp-for="LastName" sfa-validation-for="LastName" sfa-validationerror-class="govuk-input--error" />
</div>

<div class="govuk-form-group" sfa-validation-for="JobRole" sfa-validationerror-class="govuk-form-group--error">
    <label asp-for="JobRole" class="govuk-label">Job role</label>
    <span class="govuk-error-message" asp-validation-for="JobRole"></span>
    <input type="text" class="govuk-input" asp-for="JobRole" sfa-validation-for="JobRole" sfa-validationerror-class="govuk-input--error" />
</div>

<div class="govuk-form-group" sfa-validation-for-list="TimeInRoleMonths,TimeInRoleYears" sfa-validationerror-class="govuk-form-group--error">
    <p class="govuk-label">Time in role</p>
    <span class="govuk-hint" id="TimeInRole-hint">
        For example, 3 02
    </span>
    <span class="govuk-error-message" asp-validation-for="TimeInRoleYears"></span>
    <span class="govuk-error-message" asp-validation-for="TimeInRoleMonths"></span>
    <div class="govuk-date-input" id="TimeInRole">
        <div class="govuk-date-input__item">
            <div class="govuk-form-group">
                <label asp-for="TimeInRoleYears" class="govuk-label govuk-date-input__label">Years</label>
                <input class="govuk-input govuk-date-input__input govuk-input--width-2"
                       asp-for="TimeInRoleYears"
                       type="number"
                       pattern="[0-9]*"
                       sfa-validation-for-list="TimeInRoleMonths,TimeInRoleYears" sfa-validationerror-class="govuk-input--error" />
            </div>
        </div>
        <div class="govuk-date-input__item">
            <div class="govuk-form-group">
                <label asp-for="TimeInRoleMonths" class="govuk-label govuk-date-input__label">Months</label>
                <input class="govuk-input govuk-date-input__input govuk-input--width-2"
                       asp-for="TimeInRoleMonths"
                       type="number"
                       pattern="[0-9]*"
                       sfa-validation-for-list="TimeInRoleMonths,TimeInRoleYears" sfa-validationerror-class="govuk-input--error" />
            </div>
        </div>
    </div>
</div>

<div class="govuk-form-group" sfa-validation-for-list="IsPartOfOtherOrgThatGetsFunding,OtherOrgName" sfa-validationerror-class="govuk-form-group--error">
    <p class="govuk-label">Is this person part of any other organisations?</p>
    <span class="govuk-error-message" asp-validation-for="IsPartOfOtherOrgThatGetsFunding"></span>
    <span class="govuk-error-message" asp-validation-for="OtherOrgName"></span>
    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
        <div class="govuk-radios__item">
            <input class="govuk-radios__input"
                   asp-for="IsPartOfOtherOrgThatGetsFunding"
                   type="radio"
                   value="Yes"
                   data-aria-controls="conditional-IsPartOfOtherOrgThatGetsFunding" />
            <label class="govuk-label govuk-radios__label" asp-for="IsPartOfOtherOrgThatGetsFunding">Yes</label>
        </div>
        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-IsPartOfOtherOrgThatGetsFunding">
            <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="750">
                <div class="govuk-form-group">
                    <label class="govuk-label" asp-for="OtherOrgName">Enter the names of all these organisations</label>
                    <span id="OtherOrgName-hint" class="govuk-hint">
                        Tell us which of these organisations receive funding directly from ESFA or as a subcontractor. Include the UKPRN if they have one and how many years they have been with the organisations.
                    </span>
                    <textarea class="govuk-textarea govuk-js-character-count"
                              asp-for="OtherOrgName"
                              sfa-validation-for="OtherOrgName" sfa-validationerror-class="govuk-textarea--error"
                              rows="5"
                              aria-describedby="with-hint-info OtherOrgName-hint">@Model.OtherOrgName</textarea>
                    <div id="OtherOrgName-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                        You can enter up to 750 characters
                    </div>
                </div>
            </div>
        </div>
        <div class="govuk-radios__item">
            <input class="govuk-radios__input"
                   asp-for="IsPartOfOtherOrgThatGetsFunding"
                   id="IsPartOfOtherOrgThatGetsFunding_No"
                   type="radio"
                   value="No"
                   data-aria-controls="conditional-IsPartOfOtherOrgThatGetsFunding_No" />
            <label class="govuk-label govuk-radios__label" for="IsPartOfOtherOrgThatGetsFunding_No">No</label>
        </div>
    </div>
</div>


<div class="govuk-form-group" sfa-validation-for-list="DobMonth,DobYear" sfa-validationerror-class="govuk-form-group--error">
    <p class="govuk-label">Date of birth</p>
    <span class="govuk-hint" id="dob-hint">
        For example, 3 1980
    </span>
    <span class="govuk-error-message" asp-validation-for="DobMonth"></span>
    <span class="govuk-error-message" asp-validation-for="DobYear"></span>
    <div class="govuk-date-input" id="dob">
        <div class="govuk-date-input__item">
            <div class="govuk-form-group">
                <label asp-for="DobMonth" class="govuk-label govuk-date-input__label">Month</label>
                <input class="govuk-input govuk-date-input__input govuk-input--width-2"
                       asp-for="DobMonth"
                       type="number"
                       pattern="[0-9]*"
                       sfa-validation-for-list="DobMonth,DobYear" sfa-validationerror-class="govuk-input--error" />
            </div>
        </div>
        <div class="govuk-date-input__item">
            <div class="govuk-form-group">
                <label asp-for="DobYear" class="govuk-label govuk-date-input__label">Year</label>
                <input class="govuk-input govuk-date-input__input govuk-input--width-4"
                       asp-for="DobYear"
                       type="number"
                       pattern="[0-9]*"
                       sfa-validation-for-list="DobMonth,DobYear" sfa-validationerror-class="govuk-input--error" />
            </div>
        </div>
    </div>
</div>

<div class="govuk-form-group" sfa-validation-for="Email" sfa-validationerror-class="govuk-form-group--error">
    <label asp-for="Email" class="govuk-label">Email</label>
    <span class="govuk-error-message" asp-validation-for="Email"></span>
    <input type="email" class="govuk-input" asp-for="Email" sfa-validation-for="Email" sfa-validationerror-class="govuk-input--error" />
</div>

<div class="govuk-form-group" sfa-validation-for="ContactNumber" sfa-validationerror-class="govuk-form-group--error">
    <label asp-for="ContactNumber" class="govuk-label">Contact number</label>
    <span class="govuk-error-message" asp-validation-for="ContactNumber"></span>
    <input type="text" class="govuk-input" asp-for="ContactNumber" sfa-validation-for="Email" sfa-validationerror-class="govuk-input--error" />
</div>
