@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.ApplicationSummaryViewModel

@{
    ViewBag.Title = "Application unsuccessful";
    Layout = "_Layout";
}

@section Navigation
{
    <partial name="~/Views/Application/Navigation/_ApplicationHeaderReadOnly.cshtml" />
}

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="govuk-panel app-panel--error">
                <h1 class="govuk-panel__title">
                    Application unsuccessful
                </h1>
            </div>

            <partial name="~/Views/Roatp/_ApplicationDetailsTable.cshtml" model="@Model" />

            <p class="govuk-body">
                Your application to join the Register for apprenticeship training providers (RoATP) has been unsuccessful.
            </p>

            <h1 class="govuk-heading-m">Why your application was unsuccessful</h1>
            <p class="govuk-body das-multiline-text">
                @Model.ExternalComments
            </p>

            <h2 class="govuk-heading-m">How to make an appeal</h2>
            <p class="govuk-body">
                You can make an appeal by emailing <a href="mailto:roatp.appeals@education.gov.uk">roatp.appeals@education.gov.uk.</a> You'll need to explain why your organisation is making an appeal and on what grounds.
            </p>
            <p class="govuk-body">
                Your organisation can make an appeal within 10 working days of receiving this notification. ESFA will aim to review and respond within 15 working days.
            </p>
            <p class="govuk-body">
                If your appeal is successful, your organisation will be published on the register.
            </p>
            <p class="govuk-body">
                If your appeal is unsuccessful or you decide not to make an appeal, ESFA will take action as explained in <a href="https://www.gov.uk/guidance/meeting-new-application-requirements-and-removal-from-register-of-apprenticeship-training-providers-roatp#consequences" target="_blank">the Consequences section</a> of the new policy.
            </p>
            <p class="govuk-body">
                Find out how to make an appeal in <a href="https://www.gov.uk/guidance/roatp-application-guidance-digital-may-2021" target="_blank">the application guidance</a>.
            </p>

            <h2 class="govuk-heading-m">How to make a complaint</h2>
            <p class="govuk-body">
                Your organisation can make a complaint by following <a href="https://www.gov.uk/government/organisations/department-for-education/about/complaints-procedure" target="_blank">DFE complaints procedure</a>.
            </p>

            <h2 class="govuk-heading-m">How to make an appeal</h2>
            <p class="govuk-body">
                You can contact the Manage apprenticeships service helpdesk on:
                <ul class="govuk-list govuk-list--bullet">
                    <li>08000 150 600</li>
                    <li><a href="mailto:helpdesk@manage-apprenticeships.service.gov.uk" target="_blank">helpdesk@manage-apprenticeships.service.gov.uk</a></li>
                </ul>
            </p>
        </div>
    </div>
</main>