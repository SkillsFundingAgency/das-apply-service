@using SFA.DAS.ApplyService.InternalApi.Types;
@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.AddEditPeopleInControlViewModel

@{
    ViewBag.Title = "Who is in control of your organisation?";
    Layout = "_Layout";
}

@section Navigation
{
    <partial name="~/Views/Application/Navigation/_ApplicationHeader.cshtml" />
}

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @if (Model.ErrorMessages != null && Model.ErrorMessages.Count > 0)
            {
                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            @foreach (var errorMessage in Model.ErrorMessages.DistinctBy(x => x.ErrorMessage))
                            {
                                <li><a href="#@errorMessage.Field">@errorMessage.ErrorMessage</a></li>
                            }
                        </ul>
                    </div>
                </div>
            }
            
            <span class="govuk-caption-l">@Model.SectionTitle</span>
            <h1 class="govuk-heading-xl">Who is in control of your organisation?</h1>
            <p class="govuk-body">
                This could be a:
                <ul class="govuk-list govuk-list--bullet">
                    <li>company director</li>
                    <li>shareholder</li>
                    <li>person with significant control</li>
                    <li>person with decision making powers</li>
                    <li>head of organisation</li>
                    <li>trustee</li>
                    @if (Model.OrganisationType != RoatpOrganisationTypes.StatutoryInstitute)
                    {
                    <li>sole trader</li>
                    <li>partner</li>
                    }
                </ul>
            </p>
            <p class="govuk-body">
                If there is more than one person who's in control, you can add them later.
            </p>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="post" asp-action="AddPeopleInControlDetails" novalidate>
                <input type="hidden" asp-for="ApplicationId" />
                <input type="hidden" asp-for="OrganisationType" />
                <input type="hidden" asp-for="Identifier" />
                <input type="hidden" asp-for="DateOfBirthOptional" />
                <input type="hidden" asp-for="GetHelpAction" />

                <partial name="~/Views/Roatp/WhosInControl/AddEditPersonInControl.cshtml" for="@Model" />

                <button class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Confirm and continue
                </button>

            </form>
            <partial name="~/Views/Roatp/GetHelpWithThisQuestion.cshtml" />
        </div>
    </div>
</main>