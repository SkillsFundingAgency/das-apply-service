@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.ConfirmTrusteesViewModel

@section Navigation
{
    <partial name="~/Views/Application/Navigation/_ApplicationHeader.cshtml" />
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <span class="govuk-caption-l">@Model.SectionTitle</span>
            @if (Model.Trustees != null && Model.Trustees.TableData != null && Model.Trustees.TableData.DataRows.Count == 1)
            {
                <h1 class="govuk-heading-xl">Confirm your organisation's trustee</h1>
            }
            else
            {
                <h1 class="govuk-heading-xl">Confirm your organisation's trustees</h1>
            }
            <p class="govuk-body">These are the details we found on the Charity Commission for England and Wales.</p>

        </div>

        <form method="post" asp-action="TrusteesConfirmed" enctype="multipart/form-data" novalidate>
            <input type="hidden" asp-for="ApplicationId" />
            <input type="hidden" asp-for="GetHelpAction" />

            <div class="govuk-grid-column-one-half">
                <partial name="~/Views/Roatp/WhosInControl/PeopleInControl.cshtml" for="Trustees" />
            </div>
            <div class="govuk-grid-column-two-thirds">
                <details class="govuk-details">
                    <summary class="govuk-details__summary">
                        <span class="govuk-details__summary-text">
                            What if these details are wrong?
                        </span>
                    </summary>
                    <div class="govuk-details__text">
                        <p class="govuk-body">
                            You'll need to contact the Charity Commission to <a href="https://www.gov.uk/change-your-charitys-details" target="_blank" class="govuk-link">change these details (opens in a new window or tab)</a>.
                        </p>
                        <p class="govuk-body">
                            After your changes have been confirmed, you will need to <a class="govuk-link govuk-link--no-visited-state" asp-action="RefreshTrustees" asp-controller="RoatpWhosInControlRefresh" asp-route-applicationId="@Model.ApplicationId">refresh this page</a>. Be sure to check the new details are correct.
                        </p>
                    </div>
                </details>

                <button class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Confirm and continue
                </button>
            </div>
        </form>

        <div class="govuk-grid-column-two-thirds">
            <partial name="~/Views/Roatp/GetHelpWithThisQuestion.cshtml" />
        </div>
    </div>
</main>