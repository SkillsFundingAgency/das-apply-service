@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.ConfirmDirectorsPscsViewModel

@section Navigation
{
    <partial name="~/Views/Application/Navigation/_ApplicationHeader.cshtml" />
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <span class="govuk-caption-l">@Model.SectionTitle</span>
            <h1 class="govuk-heading-xl">Confirm who's in control</h1>
            <p class="govuk-body">These are the details we found on Companies House</p>

            <form method="post" asp-action="DirectorsPscsConfirmed" enctype="multipart/form-data" novalidate>
                <input type="hidden" asp-for="ApplicationId" />
                <input type="hidden" asp-for="GetHelpAction" />

                <partial name="~/Views/Roatp/WhosInControl/PeopleInControl.cshtml" for="CompaniesHouseDirectors" />
                <partial name="~/Views/Roatp/WhosInControl/PeopleInControl.cshtml" for="CompaniesHousePscs" />

                <details class="govuk-details">
                    <summary class="govuk-details__summary">
                        <span class="govuk-details__summary-text">
                            What if these details are wrong?
                        </span>
                    </summary>
                    <div class="govuk-details__text">
                        <p class="govuk-body">
                            Contact Companies House to <a href="https://www.gov.uk/file-changes-to-a-company-with-companies-house" target="_blank" class="govuk-link">change these details (opens in a new window or tab)</a>.
                        </p>
                        <p class="govuk-body">
                            After your changes have been confirmed, sign back in to continue with this application.
                        </p>
                    </div>
                </details>

                <button class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Confirm and continue
                </button>

            </form>
            <partial name="~/Views/Roatp/GetHelpWithThisQuestion.cshtml" />
        </div>
    </div>
</main>