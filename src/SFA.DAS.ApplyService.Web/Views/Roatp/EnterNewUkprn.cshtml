@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.EnterNewUkprnViewModel

@{
    ViewBag.Title = "What is your organisation's UK provider reference number (UKPRN)?";
    Layout = "_Layout";
}

<partial name="~/Views/Roatp/ApplicationHeader.cshtml" />

