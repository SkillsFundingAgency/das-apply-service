@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.SearchByUkprnViewModel

@{
    ViewBag.Title = "Enter the UKPRN";
    Layout = "_Layout";

    bool showErrors = TempData["ShowErrors"] as bool? ?? false;
}

@if (!ViewData.ModelState.IsValid || showErrors)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                <li><a sfa-validation-for="UKPRN"></a></li>
            </ul>
        </div>
    </div>
}

<div class="govuk-width-container">

    <main class="govuk-main-wrapper " id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l">Enter your UKPRN</h1>
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form method="post" asp-action="SearchByUkprn" asp-controller="RoatpApplicationPreamble">

                    <input type="hidden" asp-for="ApplicationRouteId" />

                    <div class="govuk-form-group" sfa-validation-for="UKPRN" sfa-validationerror-class="form-group-error">
                        <label for="UKPRN" class="govuk-label">UKPRN</label>

                        <input id="UKPRN" name="UKPRN" type="text" class="govuk-input govuk-!-width-one-third" asp-for="UKPRN"
                               sfa-validation-for="UKPRN" sfa-validationerror-class="form-control-error" />
                    </div>

                    <input type="submit" class="govuk-button" value="Search" />
                </form>
            </div>
        </div>
    </main>
</div>