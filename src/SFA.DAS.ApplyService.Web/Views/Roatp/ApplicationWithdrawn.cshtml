@using SFA.DAS.AdminService.Common.Extensions;
@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.ApplicationSummaryViewModel

@{
    ViewBag.Title = "Application withdrawn";
    Layout = "_Layout";
}

<nav>
    <ul id="navigation" class="roatp__navigation " aria-label="Top Level Navigation">
        <li class="roatp__navigation-item">
            <a class="govuk-link govuk-link--no-visited-state roatp__navigation-link--current">Application overview</a>
        </li>
        <li class="roatp__navigation-item roatp__navigation-item--signout">
            <a class="govuk-link govuk-link--no-visited-state" asp-action="SignOut" asp-controller="Users">Save and sign out</a>
        </li>
    </ul>
</nav>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="govuk-panel app-panel--muted">
                <h1 class="govuk-panel__title">
                    Application withdrawn
                </h1>
            </div>

            <partial name="~/Views/Roatp/_ApplicationDetailsTable.cshtml" model="@Model" />

            <p class="govuk-body">
                Your application to join the register has been withdrawn at your request.
            </p>
            <h2 class="govuk-heading-m">How to reapply</h2>
            <p class="govuk-body">
                Your withdrawn application does not count towards the 1 application within a 12-month period limit. To reapply, you'll need to <a class="govuk-link govuk-link--no-visited-state" asp-action="" asp-controller="RoatpApplication">start a new application.</a>
            </p>
        </div>
    </div>
</main>