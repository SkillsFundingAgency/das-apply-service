@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.ChangeProviderRouteViewModel

@{
    ViewBag.Title = "Your organisation is already on the RoATP";
    Layout = "_Layout";

    bool showErrors = TempData["ShowErrors"] as bool? ?? false;
}

<div class="grid-row">
    <form asp-controller="RoatpApplicationPreamble" asp-action="ConfirmOrganisation" method="get" name="backForm">
        <a href="JavaScript:document.backForm.submit();" class="govuk-back-link">Back</a>
    </form>
</div>

@if (!ViewData.ModelState.IsValid || showErrors)
{
<div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
    <h2 class="govuk-error-summary__title" id="error-summary-title">
        There is a problem
    </h2>
    <div class="govuk-error-summary__body">
        <ul class="govuk-list govuk-error-summary__list">
            <li><a sfa-validation-for="ChangeApplicationRoute"></a></li>
        </ul>
    </div>
</div>
}

<div class="govuk-width-container">

    <main class="govuk-main-wrapper " id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l">Your organisation is already on the RoATP as @Model.IndefiniteArticle @Model.CurrentProviderType.RouteName</h1>
            </div>
        </div>

        <div class="govuk-grid-row">
            <p class="govuk-body">
                Does your organisation want to change provider route?
            </p>
        </div>

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <form method="post" asp-action="ChangeProviderRoute" asp-controller="RoatpApplicationPreamble">

                        <div class="govuk-form-group" sfa-validation-for="ApplicationRouteId" sfa-validationerror-class="govuk-error-message">

                            <fieldset class="govuk-fieldset">

                                <div class="govuk-radios">

                                    <div class="govuk-radios__item">

                                        <input asp-for="ChangeApplicationRoute" class="govuk-radios__input" id="ChangeApplicationRoute-Yes"
                                               name="ChangeApplicationRoute" type="radio" value="Y"
                                               sfa-validation-for="ChangeApplicationRoute" sfa-validationerror-class="form-control-error">
                                        <label class="govuk-label govuk-radios__label" for="ChangeApplicationRoute-Yes">
                                            Yes
                                        </label>

                                    </div>

                                    <div class="govuk-radios__item">

                                        <input asp-for="ChangeApplicationRoute" class="govuk-radios__input" id="ChangeApplicationRoute-No"
                                               name="ChangeApplicationRoute" type="radio" value="N"
                                               sfa-validation-for="ChangeApplicationRoute" sfa-validationerror-class="form-control-error">
                                        <label class="govuk-label govuk-radios__label" for="ChangeApplicationRoute-No">
                                            No
                                        </label>

                                    </div>

                                </div>
                            </fieldset>
                        </div>
                        <input type="submit" class="govuk-button" value="Save and continue" />
                    </form>
                </div>
            </div>
    </main>
</div>


