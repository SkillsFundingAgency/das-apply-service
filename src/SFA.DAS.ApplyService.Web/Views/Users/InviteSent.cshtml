@model SFA.DAS.ApplyService.Web.ViewModels.CreateAccountViewModel

@{
ViewBag.Title = "Confirm your identity";
}

<a class="govuk-back-link" asp-controller="Users" asp-action="CreateAccount">Back</a>
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">Confirm your identity</h1>
            <p class="govuk-body">We've sent an invite to @Model.Email, use the link and code to continue sign up.</p>

            <h2 class="govuk-heading-m">Not received an email?</h2>
            <form asp-method="CreateAccount" asp-controller="Users"  method="post" novalidate="">
                @Html.HiddenFor(m => m.Email)
                @Html.HiddenFor(m => m.GivenName)
                @Html.HiddenFor(m => m.FamilyName)
                <button type="submit" class="govuk-button">Request another email</button>
            </form>

        </div>
    </div>
</main>