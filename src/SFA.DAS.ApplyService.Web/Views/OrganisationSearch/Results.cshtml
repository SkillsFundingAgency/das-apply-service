@model SFA.DAS.ApplyService.Web.ViewModels.OrganisationSearchViewModel

@{
    ViewBag.Title = "Search results";
    Layout = "_Layout";
}

<a asp-action="Index" asp-controller="OrganisationSearch" class="govuk-back-link">Search again</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="get" asp-action="Results" asp-controller="OrganisationSearch" novalidate>
                @*should i make this a post as in the prototype?*@
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                        <h2 class="govuk-error-summary__title" id="error-summary-title">
                            There is a problem
                        </h2>
                        <div class="govuk-error-summary__body">
                            <ul class="govuk-list govuk-error-summary__list">
                                <li>Please select an organisation</li>
                            </ul>
                        </div>
                    </div>
                }

                <div class="govuk-form-group">
                    <h1 class="govuk-label-wrapper">
                        <label class="govuk-label govuk-label--l" for="company-name">
                            Select your organisation
                        </label>
                        <span class="govuk-hint">
                            or search again
                        </span>
                    </h1>
                    <input class="govuk-input govuk-input--width-20" asp-for="SearchString" minlength="2" required />
                </div>
                <button type="submit" class="govuk-button">Search</button>
            </form>
        </div>
    </div>

    <div class="govuk-grid-row search-results">
        <div class="govuk-grid-column-one-third">
            <aside>
                <h2 class="govuk-heading-m">Filter results</h2>
                <div class="das-filter">
                    <form method="get" asp-action="Results" asp-controller="OrganisationSearch" novalidate>
                        @Html.HiddenFor(m => m.SearchString)
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-visually-hidden-focusable">Filter by organisation type</legend>
                            <div class="das-filter-heading">
                                <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Organisation type</h3>
                            </div>
                            <div class="das-filter-body">
                                <div class="govuk-form-group">
                                    <div class="govuk-radios">
                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input" asp-for="OrganisationTypeFilter" id="Show_All" type="radio" value="" checked="@(string.IsNullOrEmpty(Model.OrganisationTypeFilter))" />
                                            <label class="govuk-label govuk-radios__label" asp-for="OrganisationTypeFilter">Show all</label>
                                        </div>
                                        @if (Model.OrganisationTypes != null)
                                        {
                                            <div class="govuk-radios__item">
                                                <input class="govuk-radios__input" asp-for="OrganisationTypeFilter" id="@orgType.Type" type="radio" value="@orgType.Type" />
                                                <label class="govuk-label govuk-radios__label" for="@orgType.Type">@orgType.Type</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <button type="submit" class="govuk-button govuk-!-margin-bottom-0">Apply filter</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </aside>
        </div>

        <div class="govuk-grid-column-two-thirds">
            @if (@Model.Organisations != null && @Model.Organisations.Any())
            {
                <table class="govuk-table">
                    <tbody class="govuk-table__body">
                        @foreach (var result in Model.Organisations)
                        {
                            <tr class="govuk-table__row govuk-table__row--no-top-padding-on-first-child">
                                <td class="govuk-table__cell govuk-!-padding-bottom-4 govuk-!-padding-left-2">
                                    <form method="post" asp-action="@(result.OrganisationType != null ? "Create" : "Type")" asp-controller="OrganisationSearch" novalidate>
                                        <input asp-for="SearchString" type="hidden" />
                                        <input asp-for="Name" value="@result.Name" type="hidden" />
                                        <input asp-for="Ukprn" value="@result.Ukprn" type="hidden" />
                                        <input asp-for="OrganisationType" value ="@result.OrganisationType" type="hidden" />
                                        <input asp-for="Postcode" value="@result.Address?.Postcode" type="hidden" />

                                        <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">
                                            <button type="submit" class="govuk-button govuk-button--looks-like-link govuk-!-font-weight-bold">@result.Name</button>
                                        </p>
                                    </form>
                                    <p class="govuk-body govuk-!-font-weight-regular govuk-!-margin-bottom-0">
                                        <span class="govuk-body govuk-!-font-weight-bold">Address</span>
                                        @if (result.Address?.Postcode == null)
                                        {
                                            @("Unknown");
                                        }
                                        else
                                        {
                                            @string.Join(", ", @result.Address?.Address1, @result.Address?.City, @result.Address.Postcode);
                                        }
                                    </p>
                                    <p class="govuk-body govuk-!-font-weight-regular govuk-!-margin-bottom-0">
                                        <span class="govuk-body govuk-!-font-weight-bold">Type</span>
                                        @if (result.OrganisationType == null)
                                        {
                                            @("Unknown");
                                        }
                                        else
                                        {
                                            @(result.OrganisationType);
                                        }
                                    </p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @*<section class="results-list">
                <nav>
                    <ul class="previous-next-navigation">
                        <li class="next">
                            <a href="/accounts/organisations/search/results?searchTerm=test&amp;pageNumber=2">
                                Next page
                                <span class="detail">Page 2 of 3</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                </section>*@
            }
            else
            {
                <div class="govuk-form-group">
                    <h1 class="govuk-heading-l">We cannot find your organisation details</h1>
                    <p class="govuk-body">Check the:</p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>spelling of the name</li>
                        <li><abbr title="UK provider reference number">UKPRN</abbr> is correct</li>
                        <li><abbr title="End-point assessor organisation">EPAO ID</abbr> is correct</li>
                        <li>organisation type is correct</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</main>