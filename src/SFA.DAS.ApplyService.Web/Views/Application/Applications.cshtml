@model List<SFA.DAS.ApplyService.Domain.Entities.Application>

@{
    ViewBag.Title = "Applications";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <!-- <h1 class="govuk-heading-xl">Signed in</h1> -->
            <h1 class="govuk-heading-xl">
                Select application
            </h1>
            <table class="govuk-table">
                <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col">Standard</th>
                    <!-- <th class="govuk-table__header" scope="col">Application ID</th> -->
                    <th class="govuk-table__header govuk-table__header--numeric" scope="col">Standard Code</th>
                    <th class="govuk-table__header govuk-table__header--numeric" scope="col">Status</th>
                </tr>
                </thead>
                <tbody class="govuk-table__body">

                @foreach (var application in Model)
                {
                    <tr>
                        <th class="govuk-table__header" scope="row">
                            <a class="govuk-link" href="@Url.Action("SequenceSignPost", "Application", new {applicationId = application.Id})">@(application.ApplicationData?.StandardName ?? "View")</a>
                        </th>
                        <!-- <td class="govuk-table__cell">@application.Id</td> -->
                        <td class="govuk-table__cell govuk-table__cell--numeric">@application.ApplicationData?.StandardCode</td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">@application.ApplicationStatus</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <form asp-action="StartApplication" asp-controller="Application" method="post">
        <button class="govuk-button" type="submit">Start Application</button>
    </form>
</main>