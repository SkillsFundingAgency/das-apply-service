@model dynamic

<div id="addressLookupWrapper" class="hide-nojs form-group disabled">
    <div class="govuk-form-group" id="address-lookup">
        <label for="postcode-search" class="govuk-label govuk-label--m">Start typing the address or postcode</label>
        <input id="postcode-search" name="postcodeSearch" type="text" class="govuk-input" spellcheck="false" autocomplete="off" autocorrect="off" disabled="disabled" />
        <span class="govuk-visually-hidden" id="ariaAddressEntered" aria-live="polite"></span>
    </div>
    <div class="govuk-form-group" id="address-manual">
        <p class="govuk-body"><a class="govuk-link" href="#" id="enterAddressManually">Enter the address manually</a></p>
        <p class="govuk-body toggle-content loading-text" id="addressLoading">Loading address...</p>
        <p id="postcodeServiceUnavailable" class="govuk-body error toggle-content text">Service is currently unavailable, please enter the address manually</p>
    </div>

    <div class="info-highlighted js-address-panel hidden">
        <ul class="govuk-list"></ul>
    </div>
</div>
<div id="addressManualWrapper">
    <div id="address-details" class="address-manual-input js-hidden">
        <div class="govuk-form-group">
            @{ var id = string.Format("{0}_Key_AddressLine1", Model.QuestionId); }
            <label class="govuk-label govuk-label--m" for="@(id)">
                Building and street
            </label>
            <sfa-validationerror-detail sfa-validation-for="@(id)" sfa-validationerror-class="govuk-error-message"></sfa-validationerror-detail>
            <input class="govuk-input govuk-!-margin-bottom-2 address-manual-input-building-1 address-manual-input-focus"
                   sfa-validation-for="@(id)"
                   sfa-validationerror-class="govuk-input--error"
                   type="text"
                   id="@(id)"
                   name="@(id)"
                   value="@Model.JsonValue?.AddressLine1" />
            @{ id = string.Format("{0}_Key_AddressLine2", Model.QuestionId); }
            <sfa-validationerror-detail sfa-validation-for="@(id)" sfa-validationerror-class="govuk-error-message"></sfa-validationerror-detail>
            <input class="govuk-input address-manual-input-building-2"
                   sfa-validation-for="@(id)"
                   sfa-validationerror-class="govuk-input--error"
                   type="text"
                   id="@(id)"
                   name="@(id)"
                   value="@Model.JsonValue?.AddressLine2" />
        </div>
        <div class="govuk-form-group">
            @{ id = string.Format("{0}_Key_TownOrCity", Model.QuestionId); }
            <label class="govuk-label govuk-label--m" for="@(id)">
                Town or city
            </label>
            <sfa-validationerror-detail sfa-validation-for="@(id)" sfa-validationerror-class="govuk-error-message"></sfa-validationerror-detail>
            <input class="govuk-input govuk-!-width-two-thirds address-manual-input-town-or-city"
                   sfa-validation-for="@(id)"
                   sfa-validationerror-class="govuk-input--error"
                   type="text"
                   id="@(id)"
                   name="@(id)"
                   value="@Model.JsonValue?.TownOrCity" />
        </div>
        <div class="govuk-form-group">
            @{ id = string.Format("{0}_Key_County", Model.QuestionId); }
            <label class="govuk-label govuk-label--m" for="@(id)">
                County
            </label>
            <sfa-validationerror-detail sfa-validation-for="@(id)" sfa-validationerror-class="govuk-error-message"></sfa-validationerror-detail>
            <input class="govuk-input govuk-!-width-two-thirds address-manual-input-county"
                   sfa-validation-for="@(id)"
                   sfa-validationerror-class="govuk-input--error"
                   type="text"
                   id="@(id)"
                   name="@(id)"
                   value="@Model.JsonValue?.County" />
        </div>
        <div class="govuk-form-group">
            @{ id = string.Format("{0}_Key_Postcode", Model.QuestionId); }
            <label class="govuk-label govuk-label--m" for="@(id)">
                Postcode
            </label>
            <sfa-validationerror-detail sfa-validation-for="@(id)" sfa-validationerror-class="govuk-error-message"></sfa-validationerror-detail>
            <input class="govuk-input govuk-input--width-10 address-manual-input-postcode"
                   sfa-validation-for="@(id)"
                   sfa-validationerror-class="govuk-input--error"
                   type="text"
                   id="@(id)"
                   name="@(id)"
                   value="@Model.JsonValue?.Postcode" />
        </div>
    </div>
</div>