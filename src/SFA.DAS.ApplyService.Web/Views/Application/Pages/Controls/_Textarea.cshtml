@model dynamic

@{ var isError = Model.ErrorMessages != null && Model.ErrorMessages.Count > 0 ? "govuk-input--error" : ""; }

<textarea
    class="govuk-textarea govuk-!-margin-bottom-0 @isError"
    sfa-validation-for-id="@Model.QuestionId"
    id="@Model.QuestionId"
    name="@Model.QuestionId"
    rows="5"
    aria-describedby="@Model.Label"
>
    @Model.Value
</textarea>