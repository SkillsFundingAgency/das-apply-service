@using SFA.DAS.ApplyService.Web.ViewModels
@model SFA.DAS.ApplyService.Web.ViewModels.StandardViewModel

@{
    ViewBag.Title = "Standard Results";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a href="/standard/@Model.ApplicationId" class="link-back">Return to standards search</a>
        <h1 class="heading-xlarge">
            <span>Standard search results for @Model.StandardToFind </span>
            <span class="heading-secondary">Number of results: @Model.Results.Count</span>
        </h1>
    </div>
</div>

<main class="govuk-main-wrapper " id="main-content" role="main">
          

    @if (@Model.Results.Count > 0)
    {
        <div class="grid-row">
            <div class="column-full">
                <div class="form-group">
                    <table>
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Standard ID</th>

                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var result in Model.Results.OrderBy(x => x.Title))
                        {
                            <tr>
                                <td data-label="Name">@result.Title</td>
                                <td data-label="ID">@result.StandardId</td>
                                <td class="numeric"><a href="/standard/confirm-standard/@Model.ApplicationId/standard/@result.StandardId">Apply for this standard</a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="grid-row">
            <div class="column-full">
                <div class="form-group">
                    There are no matching results
                </div>
            </div>
        </div>
    }


</main>