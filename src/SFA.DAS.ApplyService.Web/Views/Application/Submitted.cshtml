@model SFA.DAS.ApplyService.Web.ViewModels.SubmittedViewModel
@{
    ViewBag.Title = "Application submitted";
    Layout = "_Layout";
}

<main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                        <text>Stage 1 of your application has been submitted</text>
                </h1>
                <div class="govuk-panel__body">
                    <div class="govuk-!-margin-bottom-6">
                        <span class="govuk-!-font-size-24">We will email the outcome to you within 2 weeks.</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                    {
                        <div>
                            <span class="govuk-!-font-size-24">Application reference number</span>
                            <br />
                            <strong>@Model.ReferenceNumber</strong>
                        </div>
                    }
                </div>
            </div>
            
            <p class="govuk-body">We have sent you a confirmation email.</p>

            <h3 class="govuk-heading-m">What happens next</h3>

            <ul class="govuk-list govuk-list--bullet">
                <li>
                    <text>if your application is successful, it will be added to the next update of the Register</text>
                </li>
                <li>if your application is not successful, we will ask you for additional information to reassess your application</li>
            </ul>

            <p class="govuk-body"><a href="@Model.FeedbackUrl" target="_blank" class="govuk-link">What do you think of this service?</a> (takes 60 seconds)</p>
        </div>
    </div>
</main>