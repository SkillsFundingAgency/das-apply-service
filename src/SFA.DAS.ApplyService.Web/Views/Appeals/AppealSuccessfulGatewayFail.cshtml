@using SFA.DAS.AdminService.Common.Extensions;

@model SFA.DAS.ApplyService.Web.ViewModels.Roatp.Appeals.AppealSuccessfulViewModel

@{
    ViewBag.Title = "Appeal successful";
    Layout = "_Layout";
}

@section Navigation
{
<partial name="~/Views/Appeals/Navigation/_AppealSubmittedWithoutApplicationReviewHeader.cshtml" />
}

<main class="govuk-main-wrapper" id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel app-panel--success">
                <h1 class="govuk-panel__title">
                    Appeal successful
                </h1>
            </div>
            <dl class="govuk-summary-list">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">Appeal submitted date</dt>
                    <dd class="govuk-summary-list__value">@Model.AppealSubmittedDate.ToSfaShortDateString()</dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">Appeal determined  date</dt>
                    <dd class="govuk-summary-list__value">@Model.AppealDeterminedDate.ToSfaShortDateString()</dd>
                </div>
            </dl>

            <p class="govuk-body">
                Your appeal against your due diligence assessment has been successful.
            </p>
            <p class="govuk-body">
                Your original application was only assessed on due diligence. Your organisation’s financial health, readiness and quality were not reviewed.
            </p>
            <p class="govuk-body">
                If you would still like to join the RoATP, you need to submit a new application.
            </p>

            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
            <h2 class="govuk-heading-m">What happens next</h2>
            <p class="govuk-body">
                You will need to request a new invitation to submit a new application.
            </p>
                <form method="get" asp-action="RequestNewInvitation" asp-controller="RoatpAppeals" asp-route-applicationId="@Model.ApplicationId">
                <button class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Request new invitation
                </button>
            </form>

            <partial name="~/Views/Roatp/_ApplicationApprovedContactDetails.cshtml" />
        </div>
    </div>
</main>