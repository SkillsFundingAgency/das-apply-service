<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="internal-nlog.txt"
      throwExceptions="true">

  <extensions>
    <add assembly="SFA.DAS.NLog.Targets.Redis"/>
    <add assembly="Microsoft.ApplicationInsights.NLogTarget" />
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <target type="ApplicationInsightsTarget" name="aiTarget" />

    <!-- write to the void aka just remove -->
    <target xsi:type="Null" name="blackhole" />

    <target xsi:type="Redis" name="redis" connectionStringName="Redis" environmentKeyName="EnvironmentName" appName="das-apply-service-ui" includeAllProperties="true" layout="${message}">
      <field name="RequestId" layout="${aspnet-traceidentifier}"/>
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="aiTarget" />
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="redis" />

    <!--Skip Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />
  </rules>
</nlog>
